public class Main {
    public static void main(String[] args) {
       int NUMEROLF= 0;

       if (NUMEROLF<0){
           System.out.println("es negativo");
       } else if (NUMEROLF>0){
            System.out.println("es positivo");
        }else if (NUMEROLF==0){
           System.out.println("es cero");
       }




    }
